@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Bootstrap/css/bootstrap.css")
    @Styles.Render("~/Bootstrap/bootstrap-table/bootstrap-table.css")   
    @*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">*@  
</head>
<body>
    <div class="panel-body" style="padding-bottom:0px;">
        <div class="panel panel-default">
            <div class="panel-heading">问题与建议</div>
            <div class="panel-body">
                <form id="formSearch" class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="txt_search_departmentname">
                            账号ID
                        </label>
                        <div class="col-sm-2">
                            <input type="text" class="form-control" id="UsersId">
                        </div>
                        <label class="control-label col-sm-2" for="txt_search_departmentname">
                            处理状态
                        </label>
                        <div class="col-sm-2">
                            <select id="Stateinfo" class="form-control">
                                <option value="1">待处理</option>
                                <option value="2">已处理</option>
                            </select>
                        </div>
                        <div class="col-sm-4" style="text-align:left;">
                            <button type="button" class="btn btn-default" onclick="onloadTable();">
                                查询 <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div id="toolbar" class="btn-group">
            <button id="btn_edit" type="button" class="btn btn-default">
                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> 修改处理状态
            </button>
            <button id="btn_delete" type="button" class="btn btn-default">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> 删除
            </button>
        </div>
        <table id="tb_departments" data-reorderable-columns="true"></table>
    </div>
    @*加载表格*@
    @Scripts.Render("~/plugins/jQuery/jquery-2.2.3.min.js")
    @Scripts.Render("~/Bootstrap/js/bootstrap")
    @*加载弹出层*@
    @Scripts.Render("~/Thems/js/layer/layer.js")
    <script src="~/Scripts/Admin/ProblemsAndSuggestions.js?v=1"></script>
    <script>
        $(function () {
            onloadTable();

            $("#btn_edit").click(function () {
                var ids = $("#tb_departments").bootstrapTable('getSelections');
                if (ids.length == 0) {
                    parent.layer.msg('请先选中一行');
                    return false;
                }
                parent.layer.open({
                    type: 2,
                    title: '修改状态',
                    shadeClose: true,
                    shade: 0.8,
                    area: ['250px;', '200px;'],
                    content: '/ProblemsAndSuggestions/UpdateState?id=' + ids[0].id,
                    end: function () { //层彻底关闭后执行的回调
                        onloadTable();
                    }
                });
            });

            $("#btn_delete").click(function () {
                var ids = $("#tb_departments").bootstrapTable('getSelections');
                if (ids.length == 0) {
                    parent.layer.msg('请先选中一行');
                    return false;
                }
                parent.layer.confirm('删除当前记录?', {
                    btn: ['确定', '取消'] //按钮
                }, function () {
                    var id = '';
                    for (var i = 0; i < ids.length; i++) {
                        id += ids[i].id + ",";
                    }
                    id = id.substr(0, id.length - 1);
                    $.ajax({
                        url: '/ProblemsAndSuggestions/Delete?id=' + id,
                        async: false,
                        success: function (data) {
                            if (data == "True") {
                                parent.layer.closeAll();
                                onloadTable();
                            }
                            else {
                                parent.layer.closeAll();
                            }
                        }
                    })

                }, function () {
                });
            });
        });

        function ShowMsg(msg)
        {
           parent.layer.alert(msg, {
                skin: 'layui-layer-lan'
              , closeBtn: 0
              , anim: 4 //动画类型
            });
        }
    </script>
</body>
</html>

