                <span for="inputEmail3" class="col-sm-2 control-label"><span style="color:red;">*</span>位置&nbsp;&nbsp;&nbsp;&nbsp;</span>
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.arrangement, new { @class = "form-control" })
