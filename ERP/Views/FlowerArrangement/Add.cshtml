@model Model.FlowerArrangement
@{
    Layout = null;
}

@Styles.Render("~/bootstrap/css/bootstrap.css")
@Scripts.Render("~/Plugins/jQuery/jquery-2.2.3.min.js")
@*加载弹出层*@
@Scripts.Render("~/Thems/js/layer/layer.js")
<script src="~/Scripts/jquery.valiedate.form.js"></script>
<script type="text/javascript">
    function CheckFrom() {
        if ($("#arrangement").val().length ==0 ) {          
                layer.msg('位置不能为空');
                return false;
        }
        if ($("#Specifications").val().length ==0) {
                layer.msg('规格不能为空');
                return false;
        }
        if ($("#UnitPrice").val() != "") {
            if (!isMoney($("#UnitPrice").val())) {
                layer.msg('单价输入格式不正确');
                return false;
            }
        } 
        if ($("#Count").val() != "") {
            if (!isNumber($("#Count").val())) {
                layer.msg('数量输入格式不正确');
                return false;
            }
        }
        if ($("#Total").val() != "") {
            if (!isMoney($("#Total").val())) {
                layer.msg('合计输入格式不正确');
                return false;
            }
        }
        return true;
    }
    ///返回主页的数据，为提交做准备
    var callbackdata = function () {
        var d = {};
        var t = $('form').serializeArray();
        $.each(t, function () {
            d[this.name] = this.value;
        });
        return d;
    }
</script>
@using (Html.BeginForm("Add", "FlowerArrangement", FormMethod.Post, new { onsubmit = "return  CheckFrom()", enctype = "multipart/form-data" }))
{ 

    <div class="box-body">
        <br />
        <div class="form-group" style="height:30px;width:100%;">
