@model Model.Warm_prompt
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-dpi, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>增加温馨提示</title>
    @Styles.Render("~/static/css/bootstrap.css")
    <script src="~/static/js/jquery.js"></script>
    <script src="~/static/js/util.js"></script>
    <script src="~/Thems/js/layer/mobile/layer.js"></script>
    <script src="~/Scripts/jquery.valiedate.form.js"></script>
    <style>
        table tr {
            height: 20px;
        }
    </style>
    <script>

        function CheckFrom() {           

            if ($("#Content").val() == '') {
                layer.open({
                    content: '温馨提示不能为空'
             , btn: '我知道了'
                });
                return false;
            }
            layer.open({
                type: 2
              , content: '提交中'
            });
            return true;
        }
    </script>
</head>
<body>
    @using (Html.BeginForm("Warm", "Adviertisement", FormMethod.Post, new { onsubmit = "return  CheckFrom()", style = "width: 80%; margin: 0px auto;", enctype = "multipart/form-data" }))
    {      
        <div class="form-group">
            <label for="exampleInputPassword1">温馨提示</label>
            @Html.TextAreaFor(x => x.Content, new { @class = "form-control", @placeholder = "请输入温馨提示" })
        </div>
        <div style="float: right; margin-bottom: 10px;">
            <button type="submit" class="btn btn-primary glyphicon glyphicon-ok" id="SumBitFowler">提交</button>
        </div>
    }
</body>
</html>
